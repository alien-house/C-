<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    Title="Contact page"
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DemoNavigation.Contacts">
	<StackLayout>
        <ListView x:Name="listView"
            ItemSelected="listview_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}"
                    Detail="{Binding Status}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
