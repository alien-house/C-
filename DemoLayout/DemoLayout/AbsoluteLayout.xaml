<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DemoLayout.AbsoluteLayout">
	
    <AbsoluteLayout>
        <!--   we need to implement as a proportional valve    -->
        <BoxView BackgroundColor="Aqua" 
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="SizeProportional"/>
        <BoxView Color="White" 
            AbsoluteLayout.LayoutBounds="0.5,0.1,100,100"
            AbsoluteLayout.LayoutFlags="PositionProportional" />
        <Button Text="Click Me" BackgroundColor="Navy"
            TextColor="White"
            AbsoluteLayout.LayoutBounds="0,1,1,50"
            AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional" />
    </AbsoluteLayout>
</ContentPage>
